@using ClickNClaim.WebPortal.Resources
@model List<ClickNClaim.Common.AspNetUser>
@{
    ViewBag.Title = "ArbiterList";
}



<div class="container view-container">
    <h2>@Arbitre.ListOfArbitrators</h2>

    @foreach (var item in Model)
    {
        <a href="@Url.Action("Detail","Arbitre", new { id = item.Id })">
            <div class="card">
                <div class="card-content">
                    <div class="row">
                        <div class="col s4">
                            <img src="@(item.PhotoPath ?? Url.Content("~/Images/default-user.png"))" width="100" />
                            <br />
                            <p>@item.DisplayName</p>
                        </div>
                        <div class="col s8">
                            <div class="row">
                                <div class="col s12">
                                    <h4>@Arbitre.Presentation</h4>
                                    <p>@item.BusinessFunction</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12">
                                    <h4>@Arbitre.Qualifications</h4>
                                    @foreach (var arbiterSkill in item.ArbiterSkills)
                                    {
                                        <div class="chip">
                                            @arbiterSkill.Skill.Name
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    }


</div>