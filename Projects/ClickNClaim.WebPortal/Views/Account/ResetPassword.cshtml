@using ClickNClaim.WebPortal.Resources
@model ClickNClaim.WebPortal.Models.ResetPasswordViewModel
@{
    ViewBag.Title = Account.ResetingPassword;
}



<div class="container root-container">
    <div class="row">
        <div class="col l6 offset-l3 m12 s12">
            <div class="card">

                @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4>@Account.ResetMyPassword</h4>
                    <hr />
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Code)
                    <div class="row">
                        <div class="col s12">
                            <div class="input-field">
                                @Html.LabelFor(m => m.Email)
                                @Html.TextBoxFor(m => m.Email)
                            </div>
                            <div class="input-field">
                                @Html.LabelFor(m => m.Password)
                                @Html.PasswordFor(m => m.Password)
                            </div>
                            <div class="input-field">
                                @Html.LabelFor(m => m.ConfirmPassword)
                                @Html.PasswordFor(m => m.ConfirmPassword)
                            </div>
                        </div>
                    </div>
                    <div class="row last-row">
                            <div class="col s12">
                                <input type="submit" class="btn btn-default right" value="@Account.Reset" />
                            </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section css{
    <style type="text/css">
        .root-container {
            margin-top: 40px;
        }
    </style>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(document).ready(function () {
            ko.applyBindings({ data: '' }, $("#wrapper")[0]);
        })

    </script>
}
