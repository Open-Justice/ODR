@using ClickNClaim.WebPortal.Resources
@model ClickNClaim.WebPortal.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = Account.ForgotPassword;
}


<div class="container root-container">
    <div class="row">
        <div class="col l6 offset-l3 m12 s12">
            <div class="card">
                <h4>@ViewBag.Title</h4>
                @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <hr />
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col s12">
                            <p>@Account.ChangePasswordEmail</p>
                        </div>
                        <div class="col s12">
                            <div class="input-field">
                                @Html.LabelFor(m => m.Email)
                                @Html.TextBoxFor(m => m.Email)
                            </div>
                        </div>
                    </div>
                  <div class="row last-row">
                      <div class="col s12">
                          <input type="submit" class="btn btn-default right" value="@Account.Confirm" />
                      </div>
                  </div>
                      
                      
                }
            </div>
        </div>
    </div>
</div>

@section css{
    <style type="text/css">
        .root-container {
            margin-top: 40px;
        }
    </style>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(document).ready(function () {
            ko.applyBindings({ data: '' }, $("#wrapper")[0]);
        })

    </script>

}
