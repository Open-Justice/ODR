                <p>@ClickClaim.Art6_3Provisions_L2</p>

            </div>

            <div id="responsabilite" class="section scrollspy">
                <h2>@ClickClaim.Art7</h2>

                <p><b>@ClickClaim.Art7_1</b></p>

                <p style="text-decoration:underline">@ClickClaim.Art7_1_1</p>
                <p>@ClickClaim.Art7_1_1Provisions_L1</p>
                <p>@ClickClaim.Art7_1_1Provisions_L2</p>

                <p style="text-decoration:underline">@ClickClaim.Art7_1_2</p>
                <p>@ClickClaim.Art7_1_2Provisions_L1</p>
                <p>@ClickClaim.Art7_1_2Provisions_L2</p>


                <p><b>@ClickClaim.Art7_2</b></p>
                <p>@ClickClaim.Art7_2Provisions</p>

                <p style="text-decoration:underline">@ClickClaim.Art7_2_1</p>
                <p>@ClickClaim.Art7_2_1Provisions</p>

                <p style="text-decoration:underline">@ClickClaim.Art7_2_2</p>
                <p>@ClickClaim.Art7_2_2Provisions</p>

                <p><b>@ClickClaim.Art7_3</b></p>
                <p>@ClickClaim.Art7_3Provisions_L1</p>
                <p>@ClickClaim.Art7_3Provisions_L2</p>

                <p><b>@ClickClaim.Art7_4</b></p>
                <p>@ClickClaim.Art7_4Provisions</p>
            </div>

            <div id="dispositions" class="section scrollspy">
                <h2>@ClickClaim.Art8</h2>

                <p><b>@ClickClaim.Art8_1</b></p>
                <p>@ClickClaim.Art8_1Provisions</p>

                <p><b>@ClickClaim.Art8_2</b></p>
                <p>@ClickClaim.Art8_2Provisions</p>

                <p><b>@ClickClaim.Art8_3</b></p>
                <p>@ClickClaim.Art8_3Provisions</p>

                <p><b>@ClickClaim.Art8_4</b></p>
                <p>@ClickClaim.Art8_4Provisions</p>

                <p><b>@ClickClaim.Art8_5</b></p>
                <p>@ClickClaim.Art8_5Provisions</p>

                <p><b>@ClickClaim.Art8_6</b></p>
                <p>@ClickClaim.Art8_6Provisions</p>
            </div>
        </div>
    </div>
</div>





@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            ko.applyBindings(null, $("#wrapper")[0]);
            $('.scrollspy').scrollSpy();
        });
    </script>
}

@section css{
    <style>
        .section {
            padding-bottom: 0rem;
            padding-top: 1rem;
            margin-bottom: 0.5rem;
        }
    </style>
}